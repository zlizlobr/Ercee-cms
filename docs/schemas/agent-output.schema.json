{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ercee.local/schemas/agent-output.schema.json",
  "title": "Agent Output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "scope",
    "files_changed",
    "tests_run",
    "risks",
    "next_handoff"
  ],
  "properties": {
    "scope": {
      "type": "string",
      "minLength": 1
    },
    "files_changed": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "tests_run": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "next_handoff": {
      "type": "string",
      "minLength": 1
    }
  }
}
