{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Linear Task Drafts",
  "type": "object",
  "required": ["tasks"],
  "additionalProperties": false,
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "description",
          "priority",
          "state",
          "linearId",
          "createdAt"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "state": {
            "type": "string",
            "enum": ["draft", "approved", "synced", "archived"]
          },
          "linearId": {
            "type": ["string", "null"]
          },
          "parentId": {
            "type": "string",
            "minLength": 1
          },
          "parentLinearId": {
            "type": ["string", "null"]
          },
          "workflowStateId": {
            "type": ["string", "null"]
          },
          "createdAt": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "branchName": {
            "type": "string",
            "minLength": 1
          },
          "labels": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}
