APP_NAME=Ercee
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Use 'predis' if phpredis extension is not installed
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# GitHub Integration (for frontend rebuild)
GITHUB_TOKEN=
GITHUB_FRONTEND_REPOSITORY=your-org/ercee-frontend

# Frontend Rebuild Configuration
# FRONTEND_REBUILD_ENABLED: true/false - whether to trigger rebuilds
# FRONTEND_REBUILD_MODE: github (production), local (dev sync), log (dev logging only), disabled
FRONTEND_REBUILD_ENABLED=true
FRONTEND_REBUILD_MODE=github

# For local development mode - path to frontend project
FRONTEND_LOCAL_PATH=/path/to/ercee-frontend

# Frontend Rebuild Token (generate a secure random string)
FRONTEND_REBUILD_TOKEN=

# Theme Build Configuration
THEME_BUILD_FRONTEND_PATH=/usr/local/var/www/ercee-frontend
THEME_BUILD_WORKDIR=/usr/local/var/www/Ercee-cms/storage/app/theme-builds/work
THEME_BUILD_NODE_BIN=node
THEME_BUILD_CMD="npm run build"
THEME_BUILD_ZIP_TTL=3600
THEME_BUILD_LOCK_TTL=1800
THEME_BUILD_TIMEOUT=1200
THEME_BUILD_WEBHOOK_SECRET=
THEME_BUILD_CALLBACK_TIMEOUT=10
THEME_BUILD_RATE_LIMIT=10
THEME_BUILD_STATUS_RATE_LIMIT=60

# API Authentication
# API_PUBLIC_TOKEN: Bearer token required for all /api/v1/* endpoints (except form submission)
# API_PUBLIC_TOKEN_NAME: Optional identifier for logging/audit purposes
# API_INTERNAL_TOKEN: Bearer token required for /api/internal/* endpoints
API_PUBLIC_TOKEN=
API_PUBLIC_TOKEN_NAME=public-api
API_INTERNAL_TOKEN=

# Frontend URL (headless frontend, e.g., https://www.example.com)
FRONTEND_URL=

# CORS Allowed Origins (comma-separated, e.g., https://www.example.com,https://staging.example.com)
CORS_ALLOWED_ORIGINS=*

# Media Settings
# Auto-rename uploaded images to SEO-friendly names based on title/alt
MEDIA_SEO_RENAME_ENABLED=true

# Commerce Settings
CURRENCY_CODE=CZK
CURRENCY_DECIMALS=2


# Playwright base URL (used when running e2e tests)
PLAYWRIGHT_BASE_URL=http://localhost:4321

# Google Maps API (used for address autocomplete in forms)
GOOGLE_MAPS_API_KEY=
